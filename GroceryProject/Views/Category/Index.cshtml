@model List<GroceryProject.Dal.Entities.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<br/>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td>
                <a href="@Url.Action("Delete","Category",new {categoryId=@item.CategoryId})" class="btn btn-danger">Sil</a>
                <a href="@Url.Action("Update","Category",new {categoryId=@item.CategoryId})" class="btn btn-success">Güncelle</a>
            </td>
        </tr>

    }
    </tbody>
</table>
<br/>
<a href="@Url.Action("Create")" class="btn btn-info">Yeni Kategori</a>