@model List<GroceryProject.Dal.Entities.Item>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<br/>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Ürün Id</th>
        <th>Adı</th>
        <th>Kategori</th>
        <th>Fiyat</th>
        <th>Stok Sayısı</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>
                <a href="@Url.Action("Delete","Item",new {itemId=@item.Id})" class="btn btn-danger">Sil</a>
                <a href="@Url.Action("Update","Item",new {itemId=@item.Id})" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<br/>
<a href="@Url.Action("Create")" class="btn btn-info">Yeni Ürün</a>

