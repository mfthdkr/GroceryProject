@model ItemModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<br/>
<form class="form-group" asp-action="Update" asp-controller="Item" method="post" enctype="multipart/form-data">
    @Html.LabelFor(p=>p.Name,"Ürün Adı")
    @Html.TextBoxFor(p=>p.Name,new {@class="form-control"})
    <br/>
    @Html.LabelFor(p=>p.Price,"Fiyat")
    @Html.TextBoxFor(p=>p.Price,new {@class="form-control"})
    <br/>
    @Html.LabelFor(p=>p.Stock,"Stok")
    @Html.TextBoxFor(p=>p.Stock,new {@class="form-control"})
    <br/>
    @Html.LabelFor(p=>p.Description,"Açıklama")
    @Html.TextBoxFor(p=>p.Description,new {@class="form-control"})
    <br/>
    @Html.LabelFor(p=>p.ImageUrl,"Resim Seçin")
    <input type="file" name="ImageUrl"/>
    <br/>
    @Html.LabelFor(p=>p.Category,"Kategori")
    @Html.DropDownListFor(p=>p.CategoryId,(List<SelectListItem>) ViewBag.CategoryList, new {@class="form-control"})
    <br/>
    <button class="btn btn-info">Kaydet</button>
</form>


